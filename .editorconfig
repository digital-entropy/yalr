root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.blade.php]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
